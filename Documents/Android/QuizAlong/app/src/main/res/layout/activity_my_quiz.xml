<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.quizes.MyQuizActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.thequizapp.quizalong.viewmodel.MyQuizViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/cobalt_blue"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:background="@drawable/bg_oval"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/gilroy_bold"
                android:text="@string/my_quiz"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp" />


<!--            <ImageView-->
<!--                android:id="@+id/iv_logo"-->
<!--                android:layout_width="35dp"-->
<!--                android:layout_height="35dp"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_marginEnd="15dp"-->
<!--                app:normal_image="@{viewModel.categoriesItem.image}" />-->

        </RelativeLayout>




        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp" >

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/upcoming_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/upcoming_quiz"/>
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/past_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/past_quiz"/>
            </com.google.android.material.tabs.TabLayout>
        </androidx.viewpager.widget.ViewPager>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}">

            <com.github.ybq.android.spinkit.SpinKitView
                style="@style/SpinKitView.MultiplePulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:SpinKit_Color="@color/purple" />

        </RelativeLayout>



    </LinearLayout>
</layout>