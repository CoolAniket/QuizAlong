<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="position"
            type="String" />

        <variable
            name="model"
            type="com.thequizapp.quizalong.model.leaderboard.LeaderBoardResponse.LeaderboardUser" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cobalt_blue"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_bold"
                android:maxLength="5"
                android:text='@{"#"+model.rank}'
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/ic_profile_user"
                android:backgroundTint="@color/white_30"
                android:padding="2dp"
                app:circle_crop="@{model.image}" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/gilroy_medium"
                android:text="@{model.fullName}"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/gilroy_bold"
                android:text='@{""+model.totalPoints}'
                android:textColor="@color/black"
                android:textSize="12sp" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/gilroy_bold"
                android:text='@{""+model.won}'
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>