<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.thequizapp.quizalong.viewmodel.SetPasswordViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-25dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_app"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize">

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:padding="18dp"
                        android:src="@drawable/ic_close"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="@string/set_password"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/gilroy_reguler"
                    android:gravity="center"
                    android:text="Enter password to create account or generate password. "
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/gilroy_semi_bold"
                    android:text="Email"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_white_5"
                    android:backgroundTint="@color/dim_white"
                    android:fontFamily="@font/gilroy_medium"
                    android:hint="@string/enter_your_mail"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="15dp"
                    android:singleLine="true"
                    android:afterTextChanged="@{(editable)->viewModel.afterTextChanged(editable,0)}"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <!--            android:textCursorDrawable="@xml/cursor"-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/gilroy_semi_bold"
                    android:text="@string/password"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_white_5"
                    android:backgroundTint="@color/dim_white"
                    android:fontFamily="@font/gilroy_reguler"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="30dp"
                    android:singleLine="true"
                    android:afterTextChanged="@{(editable)->viewModel.afterTextChanged(editable,1)}"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/gilroy_semi_bold"
                    android:text="@string/re_type_password"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/edt_reTypePassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_white_5"
                    android:backgroundTint="@color/dim_white"
                    android:fontFamily="@font/gilroy_reguler"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="30dp"
                    android:singleLine="true"
                    android:afterTextChanged="@{(editable)->viewModel.afterTextChanged(editable,2)}"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/bg_white_5"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="Submit"
                    android:onClick="@{()->viewModel.forgotPassword()}"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="visible" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>