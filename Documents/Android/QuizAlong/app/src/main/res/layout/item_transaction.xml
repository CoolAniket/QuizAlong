<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.thequizapp.quizalong.utils.Global" />
        <variable
            name="model"
            type="com.thequizapp.quizalong.model.payment.TransactionResponse.History" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cobalt_blue"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </LinearLayout>-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text='@{Global.prettyNullId(model.quizTitle)+" "+Global.prettyNullId(model.quizDescription)}'
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_weight="5"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gilroy_medium"
                    android:text='@{Global.prettyAmount(model.amount, "-")}'
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </LinearLayout>-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text='@{model.transactionDate}'
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gilroy_medium"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:text='@{"From: "+Global.prettyNullId(model.orderId)}'
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="start"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/gilroy_medium"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:text='@{Global.prettyPaymentStatus(model.status)}'
                    android:textColor="@color/white"
                    android:background='@{model.status.equals("Success") ? @drawable/custom_background_green : model.status.equals("Failure") ? @drawable/custom_background_red : @drawable/custom_background_yellow}'
                    android:textSize="10sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:text='@{"Trans id: "+Global.prettyNullId(model.orderId)}'
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>